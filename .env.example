# OpenAI API Key (필수)
OPENAI_API_KEY=your_openai_api_key_here

# JWT Secret (운영 환경에서는 강력한 랜덤 문자열로 변경)
JWT_SECRET=refine-secret-key-change-in-production

# Database Configuration (docker-compose.yml과 동일하게 유지)
POSTGRES_USER=refine_user
POSTGRES_PASSWORD=refine_password
POSTGRES_DB=refine_db

# Backend Configuration
PORT=3000
NODE_ENV=development

# OAuth Configuration (선택사항)
# 카카오 로그인을 사용하려면 https://developers.kakao.com/ 에서 앱 생성 후 키 발급
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# 구글 로그인을 사용하려면 https://console.cloud.google.com/ 에서 OAuth 클라이언트 ID 생성
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
